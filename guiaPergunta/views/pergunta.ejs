<%- include('./partials/header'); %>

<body>
    <%- include('./partials/navbar'); %>

    <div class="container" >
    <hr>
    <h1><%= perguntar.titulo %></h1>
    <p><%= perguntar.descricao %></p>
    <hr>
    <form method="post" action="/responder">
        <h3>Responda</h3>
        <label>Resposta: </label>
        <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
        <input type="hidden" name="pergunta" value="<%= perguntar.id %>">
        <button type="submit" class="btn btn-dark">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => {%>
        
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div>
        <hr>
    <%})%>
    
</body>

<%- include('./partials/footer'); %>