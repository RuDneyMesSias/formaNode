<%- include('./partials/header'); %>

<body>
    <%- include('./partials/navbar'); %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/home" class="btn btn-dark">Realizar Pergunta</a>
        <hr>
        <% perguntas.forEach(pergunta => {%>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><p><%= pergunta.titulo %></p></h3>
            </div>
            <div class="card-footer">
                <a href="/perguntar/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
            </div>
        </div>
        <% }) %>
    </div>

</body>

<%- include('./partials/footer'); %>